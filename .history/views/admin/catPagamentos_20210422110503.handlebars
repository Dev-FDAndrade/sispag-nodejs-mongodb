<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Categorias de Pagamento</h2>
            </div>
            <div class="p-2">
                <a href="/admin/cadCatPagamento" class="btn btn-success">Cadastrar</a>
            </div>
        </div>
        {{> _msg}}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categoriasPagamentos}}
                    <tr>
                        <td>{{nome}}</td>
                        <td class="text-right">
                            <span class="d-none d-md-block">
                                <a href="visualizar.html" class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="admin/editCatPagamento/{{_id}}"
                                    class="btn btn-outline-warning btn-sm">Editar</a>
                                <a href="apagar.html" class="btn btn-outline-danger btn-sm" data-toggle="modal"
                                    data-target="#apagarRegistro">Apagar</a>
                            </span>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>