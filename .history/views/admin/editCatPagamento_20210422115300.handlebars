<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Editar Categoria Pagamento</h2>
            </div>
            <div class="p-2">
                <a href="/admin/catPagamentos" class="btn btn-warning">Listar Categorias</a>
            </div>
        </div>
    </div>

    <div class="list-group-item">
        {{> _msg}}
        <form action="/admin/updateCatPagamento" method="POST">
            <input type="hidden" name="id" value="{{data._id}}">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label><span class="text-danger">*</span> Nome da Categoria</label>
                    <input name="nome" type="text" class="form-control" placeholder="Nome da Categoria"
                        value="{{data.nome}}">
                </div>
            </div>
            <div class="text-right">
                <button type="submit" class="btn btn-success">Salvar</button>
            </div>
        </form>
    </div>

</div>