<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Pagamento</h2>
            </div>
            <div class="p-2">
                <a href="/admin/cadPagamento" class="btn btn-success">Cadastrar</a>
            </div>
        </div>
        {{> _msg}}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Valor</th>
                        <th>Categoria</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data}}
                    <tr>
                        <td>{{nome}}</td>
                        <td>{{valor}}</td>
                        <td><a href="/admin/viewCatPagamento/{{categoria._id}}">{{categoria.nome}}</a></td>
                        <td class="text-right">
                            <span class="d-none d-md-block">
                                <a href="/admin/viewPagamento/{{_id}}"
                                    class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="/admin/editPagamento/{{_id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                                <a href="/admin/deletePagamento/{{_id}}"
                                    class="btn btn-outline-danger btn-sm" data-confirm="{{nome}}">Apagar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/admin/viewPagamento/{{_id}}">Visualizar</a>
                                    <a class="dropdown-item" href="/admin/editPagamento/{{_id}}">Editar</a>
                                    <a class="dropdown-item" href="/admin/deletePagamento/{{_id}}" data-confirm="{{nome}}">Apagar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>