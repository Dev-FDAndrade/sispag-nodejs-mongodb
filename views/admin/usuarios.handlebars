<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Usuários</h2>
            </div>
            <div class="p-2">
                <a href="/admin/cadUsuario" class="btn btn-success">Cadastrar</a>
            </div>
        </div>
        {{> _msg}}
        <div class="table-responsive">
            <table class="table table-striped table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>CPF</th>
                        <th>Grupo</th>
                        <th>Status</th>
                        <th class="text-center">Ações</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each data.docs}}
                    <tr>
                        <td>{{nome}}</td>
                        <td>{{email}}</td>
                        <td>{{cpf}}</td>
                        <td>{{grupo.nome}}</td>
                        <td>
                            {{#ifCond status 1}}
                            Ativo
                            {{else}}
                            Inativo
                            {{/ifCond}}
                        </td>
                        <td class="text-right">
                            <span class="d-none d-md-block">
                                <a href="/admin/viewUsuario/{{_id}}"
                                    class="btn btn-outline-primary btn-sm">Visualizar</a>
                                <a href="/admin/editUsuario/{{_id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                            </span>
                            <div class="dropdown d-block d-md-none">
                                <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Ações
                                </button>
                                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                                    <a class="dropdown-item" href="/admin/viewUsuario/{{_id}}">Desativar</a>
                                    <a class="dropdown-item" href="/admin/editUsuario/{{_id}}">Editar</a>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="paginacao">
                <ul class="pagination pagination-sm justify-content-center">
                    {{#if data.hasPrevPage}}
                    <li class="page-item">
                        <a class="page-link" href="/admin/usuarios?page=1" tabindex="-1">Primeira</a>
                    </li>
                    <li class="page-item"><a class="page-link"
                            href="/admin/usuarios?page={{data.prevPage}}">{{data.prevPage}}</a></li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1">Primeira</a>
                    </li>
                    {{/if}}
                    <li class="page-item active">
                        <a class="page-link" href="#">{{data.page}}</a>
                    </li>
                    {{#if data.hasNextPage}}
                    <li class="page-item"><a class="page-link"
                            href="/admin/usuarios?page={{data.nextPage}}">{{data.nextPage}}</a></li>
                    <li class="page-item">
                        <a class="page-link" href="/admin/usuarios?page={{data.totalPages}}">Última</a>
                    </li>
                    {{else}}
                    <li class="page-item disabled">
                        <a class="page-link" href="#">Última</a>
                    </li>
                    {{/if}}

                </ul>
            </nav>
        </div>
    </div>
</div>