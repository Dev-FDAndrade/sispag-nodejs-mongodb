<div class="content p-1">
    <div class="list-group-item">
        <div class="d-flex">
            <div class="mr-auto p-2">
                <h2 class="display-4 titulo">Visualizar Detalhes Categoria</h2>
            </div>
            <div class="p-2">
                <span class="d-none d-md-block">
                    <a href="/admin/catPagamentos" class="btn btn-outline-info btn-sm">Listar</a>
                    <a href="/admin/editCatPagamento/{{data._id}}" class="btn btn-outline-warning btn-sm">Editar</a>
                    <a href="/admin/deleteCatPagamento/{{data._id}}" class="btn btn-outline-danger btn-sm">Apagar</a>
                </span>
                <div class="dropdown d-block d-md-none">
                    <button class="btn btn-primary dropdown-toggle btn-sm" type="button" id="acoesListar"
                        data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Ações
                    </button>
                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="acoesListar">
                        <a class="dropdown-item" href="/admin/catPagamentos">Listar</a>
                        <a class="dropdown-item" href="/admin/editCatPagamento/{{data._id}}">Editar</a>
                        <a class="dropdown-item" href="/admin/deleteCatPagamento/{{data._id}}">Apagar</a>
                    </div>
                </div>
            </div>
        </div>
        <hr>
        {{> _msg}}
        <dl class="row">
            <dt class="col-sm-3">ID:</dt>
            <dd class="col-sm-9">{{data._id}}</dd>

            <dt class="col-sm-3">Nome da Categoria:</dt>
            <dd class="col-sm-9">{{data.nome}}</dd>

            <dt class="col-sm-3">Data de Criação:</dt>
            <dd class="col-sm-9">{{data.created}}</dd>
        </dl>
    </div>
</div>
</div>